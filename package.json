{
  "name": "click-battle",
  "version": "1.0.0",
  "description": "Un jeu de bataille de clics en temps r√©el",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "electron": "electron .",
    "build:electron": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.clickbattle.app",
    "productName": "Click Battle",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  }
}
